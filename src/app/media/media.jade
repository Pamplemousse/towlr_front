div(ng-include="'components/sidenav/sidenav.html'")

//- div(layout='column', layout-fill='')

section(style='height:100%; width: 100%; display: table;').jumbotron
  div(style='display: table-cell; vertical-align: middle;')
    h1 I want to
    div(layout='row', layout-margin='', layout-padding='')
      div(flex='10')
      div(flex='80')
        div(layout='row')
          md-button.md-button-colored.media-button(ng-click='filterBy("read");')
            i.fa.fa-lg.fa-book
            |  read
          md-button.md-button-colored.media-button(ng-click='filterBy("listen");')
            i.fa.fa-lg.fa-music
            |  listen
          md-button.md-button-colored.media-button(ng-click='filterBy("watch");')
            i.fa.fa-lg.fa-film
            |  watch

div(id='content' style='height:100%;')
  div(layout='row', layout-margin='', layout-padding='')
    div(flex='20')
    div(flex='60')
      input(type='text', placeholder='quick search field...', ng-model='search.text').search
  .techs(layout-align='center')
    md-card(ng-repeat="link in links | filter:{tag: search.tag, title: search.text}")
      .thumbnail
        h3 {{link.title}}
        a(ng-href='{{link.url}}') {{link.url}}

